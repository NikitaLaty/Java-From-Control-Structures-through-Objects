import java.util.Scanner;

public class AverageRainfall {

	public static void main(String[] args) {
		
		
		int years;
		int inches = 0;
		System.out.println("How many years>");
		Scanner keyboard = new Scanner(System.in);
		years = keyboard.nextInt();
		
		for (int i = 0; i < years ; i++) {
			
			for (int j = 1 ; j <= 12 ; j++) {
				
				System.out.println("How many inches of rain in " + j);
				
				inches += keyboard.nextInt();
				
				
				
				
			}

			
		}
		
		int totalMonths = years * 12;
		
		System.out.println("The total months : " + totalMonths);
		System.out.println("Total inches of rain : " + inches);
		System.out.println("Average rain fall per month : " + ((double)inches/(double)totalMonths));
		
		


	}

}
