import java.util.Random;

public class EvenOdd {

	public static void main(String[] args) {
		
		
		Random random = new Random();

		int total =0;
		int odd = 0;
		for (int i = 1; i <= 100; i++) {
			
			int ran = random.nextInt(100);
			if(isEven(ran))
			{
				total++;
				System.out.println("The number " + ran + " was add it and total is " + total);
			}
			else
			{
				odd++;
			}
			
			
			
			
		}
		
		System.out.println("=========");
		System.out.println("ODD: " + odd + " EVEN " + total);
		

	}
	
	public static boolean isEven(int num)
	{
		
		boolean ans;
		
		if((num % 2) == 0)
		{
			ans = true;
		}else
		{
			ans = false;
		}
		
		
		
		
		
		return ans;
	}

}
