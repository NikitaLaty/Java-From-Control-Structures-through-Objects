import javax.swing.JOptionPane;
/**
 * thiws program demoastrates using JOPtionPane and converting from string to other data types
 * @author nikit
 *
 */
public class PayrollDialog {

	public static void main(String[] args) {
		
		
	String inputString;
	String name;
	int hours;
	double payRate;
	double grossPay;
	
	//Get the user's name.
	name = JOptionPane.showInputDialog("What is your name? ");
	
	//Get the hours worked
	inputString = JOptionPane.showInputDialog("How many hours did you work this week? ");
	
	//Convert the input to an int.
	hours = Integer.parseInt(inputString);
	
	//Get the hourly rate
	inputString = JOptionPane.showInputDialog("What is your hourly rate? ");
	
	//Convert the input to an double.
	payRate = Double.parseDouble(inputString);
	
	//Calculate the gross pay now.
	grossPay = payRate * hours;
	
	//Display the results
	JOptionPane.showMessageDialog(null, "Your gross pay is " + grossPay);
		
		
		
	System.exit(0);
		
		
		
		
		
		
		
		
		
		
		
		// TODO Auto-generated method stub

	}

}
